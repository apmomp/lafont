.food
  .fname.float
    - if request.fullpath =~ edit_bill_path_regex
      - if defined? bill_line
        = link_to image_tag("delete.gif"), bill_line, :method => :delete, :remote => true,
                           :confirm => "¿Borrar #{food.name}?",
                           :title => "Borrar " + food.name
        = food.name
      - else
        = link_to food.name, bill_bill_lines_path(params[:id]) + "?food_id=#{food.id}",
                                                                  :remote => true,
                                                                  :class => "food_button",
                                                                  :method => :post

    - else
      = food.name
  .fprice.float
    #{number_with_precision(food.price, :precision => 2)}€
    = link_to image_tag("delete.gif"), food, :method => :delete,
                           :confirm => "¿Borrar #{food.name}?",
                           :title => "Borrar " + food.name unless not request.fullpath =~ /\/food_cats\/\d+\/edit/
- if request.fullpath =~ /(menu|food_cats\/\d+\/edit\/?)/
  .fdesc
    = food.desc
 
